<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.josephtran.showstowatch.show_add.ShowAddFragment">

    <TextView
        android:id="@+id/show_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/show_form_def_title"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/show_form_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_title"
        android:layout_marginTop="16dp"
        android:text="@string/show_form_title_label"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/show_form_title_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_title_label"
        android:backgroundTint="@color/colorAccent"
        android:hint="@string/show_form_title_hint"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/show_form_season_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_title_edit"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/show_form_season_edit"
        android:text="@string/show_form_season_label"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/show_form_season_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_season_label"
        android:backgroundTint="@color/colorAccent"
        android:inputType="number"
        android:text="@string/show_form_num_hint"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/show_form_episode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_season_edit"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/show_form_episode_edit"
        android:text="@string/show_form_episode_label"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/show_form_episode_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_episode_label"
        android:backgroundTint="@color/colorAccent"
        android:inputType="number"
        android:text="@string/show_form_num_hint"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/show_form_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_episode_edit"
        android:layout_marginTop="16dp"
        android:text="@string/show_form_status_label"
        android:textColor="@android:color/white" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/show_form_status_label"
        android:textColor="@android:color/white">

        <RadioButton
            android:id="@+id/show_form_in_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:checked="true"
            android:text="@string/show_form_in_progress_label"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/show_form_abandoned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="@string/show_form_abandoned_label"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/show_form_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:text="@string/show_form_completed_label"
            android:textColor="@android:color/white" />
    </RadioGroup>
</RelativeLayout>
